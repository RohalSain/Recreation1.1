<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="55dp"
        android:background="@android:color/transparent"
        android:orientation="vertical">



        <RelativeLayout
            android:id="@+id/dialog_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/uper_corner_round"
            android:orientation="vertical"
            android:layout_below="@+id/basket_circle"
            android:layout_gravity="center"
            android:paddingVertical="20dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:text="Do you want to join the team "
                android:textSize="20dp"
                android:id="@+id/t1"
                android:textAlignment="center"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:text="or "
                android:id="@+id/t2"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_below="@id/t1"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:text="create your own team"
                android:textSize="20dp"
                android:id="@+id/t3"
                android:textAlignment="center"
                android:layout_below="@+id/t2"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_Text">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                >
                <Button
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="Join"
                    android:textSize="20dp"
                    android:id="@+id/joinButton"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:background="@drawable/dialog_bg"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="Create"
                    android:textSize="20dp"
                    android:id="@+id/createButton"
                    android:textAllCaps="false"
                    android:textColor="@color/createTextColor"
                    android:background="@drawable/btn_right_bottom"
                    />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_basketball_circle" />
</RelativeLayout>