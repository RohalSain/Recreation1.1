<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundColor"
    tools:context="com.example.emilence.recreationcenter.Fragment_ForgotPassword">
    <!-- TODO: Update blank fragment layout -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp">
      <ImageButton
          android:id="@+id/Back_Forgot"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          android:paddingLeft="20dp"
          android:paddingRight="50dp"
          android:paddingBottom="50dp"
          android:paddingTop="10dp"
          android:background="@android:color/transparent"
          android:src="@drawable/ic_left_arrow_white" />
  </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RecreationLogo"
        android:layout_marginTop="50dp">
        <ImageView
            android:id="@+id/logo_Forgot"
            android:layout_width="150dp"
            android:layout_height="190dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="74dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/ic_logo" />
        <TextView
            android:id="@+id/logoText_Forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/logo"
            android:layout_alignTop="@+id/logo"
            android:layout_marginStart="130dp"
            android:layout_marginTop="170dp"
            android:text="@string/logoFont"
            android:textAlignment="center"
            android:textColor="@color/logoColor"
            android:textSize="33dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/RecreationLogo"
        android:id="@+id/EmailPassword">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="30dp"
            android:layout_marginTop="50dp">
        <EditText
            android:id="@+id/Forgot_Password_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/white"
            android:drawableLeft="@drawable/ic_email_white"
            android:drawablePadding="10dp"
            android:ems="12"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/logoColor"
            android:textColorHint="@color/logoColor"
            android:textColorLink="@color/logoColor"
            android:textSize="16dp" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/logoColor"/>
            <Button
                android:id="@+id/Send_Forgot"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/my_button_bg"
                android:forceHasOverlappingRendering="false"
                android:text="SEND"
                android:textAllCaps="false"
                android:textColor="@color/logoColor"
                android:textSize="17dp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
